{
  "name": "imperra-energy",
  "type": "module",
  "scripts": {
    "dev": "npm run build:css && vite",
    "build": "npm run build:css && vite build && npm run copy:static",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/static/tailwind.css --minify",
    "copy:static": "cp -r public/static dist/static",
    "preview": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "^4.11.5"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
